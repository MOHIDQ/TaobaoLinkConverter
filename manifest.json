{
	"manifest_version": 2,
	"name": "Taobao Link Converter",
	"version": "1.0",
	"description": "Taobao Mobile to Web link converter",

	"browser_action": {
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": ["eventPage.js, currency.js"],
		"persistent": false
	},

	"icons": { "16": "linkLogo16.png",
			   "48": "linkLogo48.png",
			   "128": "linkLogo128.png"
             },

	"permissions": [
		"contextMenus",
		"storage",
		"tabs"
	]



}